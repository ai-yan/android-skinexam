<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/img_dashbord">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <Space
                android:id="@+id/space_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/top_logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_below="@id/space_1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"/>
            <Space
                android:id="@+id/space_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/top_logo"/>
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.8"
                android:layout_below="@id/space_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:padding="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeStepGranularity="1sp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:hint="@string/email"
                app:fontFamily="sans-serif"
                android:singleLine="true"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableStart="@drawable/ic_email"
                tools:targetApi="o" />
            <Space
                android:id="@+id/space_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/edtEmail"/>
            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="0.8"
                android:layout_below="@id/space_3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_password"
                android:padding="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeStepGranularity="1sp"
                android:drawablePadding="5dp"
                android:hint="@string/password"
                app:fontFamily="sans-serif"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_password"
                tools:targetApi="o" />
            <Space
                android:id="@+id/space_4"
                android:layout_below="@id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:id="@+id/remember_forgot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/space_4"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/chkRememberPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/remember_password"
                    app:fontFamily="sans-serif"
                    android:textSize="11sp"
                    android:textColor="@color/text_color"
                    android:button="@drawable/checkbox_selector"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    tools:ignore="RtlSymmetry"
                    android:layout_alignStart="@id/edtPass"/>

                <TextView
                    android:id="@+id/txtForgotPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_alignEnd="@id/edtPass"
                    android:layout_marginTop="4dp"
                    android:textAlignment="viewEnd"
                    android:textSize="11sp"
                    android:text="@string/forgot_password"
                    android:textColor="@color/text_color"
                    app:fontFamily="sans-serif"
                    android:gravity="end" />
            </LinearLayout>
            <Space
                android:id="@+id/space_5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/remember_forgot"/>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/space_5"
                android:background="@drawable/selector_button"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:text="@string/login_button"
                app:fontFamily="sans-serif"
                android:paddingLeft="40dp"
                android:elevation="10dp"
                android:paddingRight="40dp"/>
            <TextView
                android:id="@+id/tv_dont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnLogin"
                android:gravity="center"
                app:fontFamily="sans-serif"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="11sp"
                android:autoSizeStepGranularity="2sp"
                android:text="@string/no_account_yet"
                tools:targetApi="o" />
            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_dont"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edges"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/register_button"
                app:fontFamily="sans-serif"
                android:textColor="@color/color_red_normal"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_below="@id/txtRegister"
                android:layout_centerHorizontal="true"
                android:text="@string/register_down"
                android:fontFamily="sans-serif"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="13sp"
                app:fontFamily="sans-serif"
                android:autoSizeStepGranularity="1sp"
                tools:targetApi="o" />
            <Space
                android:id="@+id/space_6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textView6"/>
            <TextView
                android:id="@+id/visit_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skinexam_com"
                android:layout_below="@id/space_6"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:fontFamily="sans-serif"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </ScrollView>



</LinearLayout>
