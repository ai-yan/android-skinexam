<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginTop="10dp"
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/color_red_focused"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Sr No" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/color_red_focused"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/company_name" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/color_red_focused"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/status" />
            </LinearLayout>


            <View
                android:layout_marginBottom="10dp"
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imgPeople"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/people" />

                    <TextView
                        android:id="@+id/lblFn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/imgPeople"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textColor="#372c24"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/lblFn"
                        android:background="@drawable/edit_text_bg"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/diver_1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@id/imgPeople"
                        android:layout_below="@id/imgPeople"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imgLoc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/location" />


                    <TextView
                        android:id="@+id/lblStreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edtAddress"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/imgLoc"
                        android:gravity="center_vertical"
                        android:text="Address: "
                        android:textColor="#372c24"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/lblStreet"
                        android:background="@drawable/edit_text_bg"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/viewStreet"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@id/imgLoc"
                        android:layout_below="@id/imgLoc"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imgEmail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_email" />


                    <TextView
                        android:id="@+id/lblEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edtEmail"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/imgEmail"
                        android:gravity="center_vertical"
                        android:text="E-mail: "
                        android:textColor="#372c24"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/lblEmail"
                        android:background="@drawable/edit_text_bg"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/viewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@id/imgEmail"
                        android:layout_below="@id/imgEmail"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imgContact"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_contact" />


                    <TextView
                        android:id="@+id/lblContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edtContact"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/imgContact"
                        android:gravity="center_vertical"
                        android:text="@string/contact"
                        android:textColor="#372c24"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edtContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/lblContact"
                        android:background="@drawable/edit_text_bg"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/viewContact"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@id/imgContact"
                        android:layout_below="@id/imgContact"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/black" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:freezesText="true"
                    android:text="@string/activity_plan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
